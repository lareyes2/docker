	<Zone name="example.com">
		<Policy>default</Policy>
		<SignerConfiguration>/var/opendnssec/signconf/example.com.xml</SignerConfiguration>
		<Adapters>
			<Input>
				<Adapter type="File">/etc/bind/zones/db.example.com</Adapter>
			</Input>
			<Output>
				<Adapter type="File">/etc/bind/zones/signed/db.example.com</Adapter>
			</Output>
		</Adapters>
	</Zone>

